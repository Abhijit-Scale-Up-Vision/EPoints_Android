<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scaleup.epoints">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".root.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".landing.LandingActivity"
            android:label=""
            android:theme="@style/CustomActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.signup.SignUpActivity"
            android:theme="@style/AppTheme_Custom" />
        <activity
            android:name=".thankyou.ThankYouActivity"
            android:label=""
            android:theme="@style/AppTheme_Custom_transparent" />
        <activity android:name=".login.signup.privacypolicy.PrivacyPolicyActivity"
            android:label="Privacy Policy"
            android:theme="@style/Theme.AppCompat"></activity>
    </application>

</manifest>