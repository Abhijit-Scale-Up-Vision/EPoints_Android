<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iat.epoints">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".root.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".landing.LandingActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/CustomActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".signup.SignUpActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_Custom" />
        <activity
            android:name=".thankyou.ThankYouActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_Custom_transparent" />
        <activity
            android:name=".signup.privacypolicy.PrivacyPolicyActivity"
            android:label="Privacy Policy"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat" />
        <activity
            android:name=".signin.SignInActivity"
            android:label="Sign in"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_Custom" />
        <activity
            android:name=".signin.DashBoardActivity"
            android:label="Dash Board"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_Custom" />
        <activity
            android:name=".signin.ChangePasswordActivity"
            android:label="Change Password"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_Custom" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />

        <service
            android:name=".service.LoginExpiryService"
            android:exported="false" />

        <activity android:name=".signup.termsconditions.TermsConditionsActivity"
            android:label="Terms &amp; Conditions"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat"></activity>
    </application>

</manifest>